style.
  
  #head {
   			color: #081930;
        font-weight: bold;
   			text-align: center;
   		}
  
button#myBtn(onclick='topFunction()', title='Go to top') Top

// ------------------Nav bar--------------------
div(w3-include-html="/includes/nav.html")

.container
  // Title
  .row
    .col
      .card-body
        header.card-header
          h1#head.card-title Registered Sales Agents
  .row
    .col-md-3
      div(w3-include-html='/includes/sidebar.html')
 

    .col-md
        table.table
            thead.thead-light
                tr
                    th(scope='col') #
                    th(scope='col') First Name
                    th(scope='col') User Name
                    th(scope='col') National ID No
                    th(scope='col') Employee ID No
                    th
            tbody
                  each agent in agents
                    tr
                        th(scope='row')
                        td #{agent.firstName}
                        td #{agent.username}
                        td #{agent.nationalID}
                        td #{agent.employeeID}
                        td 
                            form(method="post" action='/register/delete')
                                input(type="hidden", placeholder="", name="id", value=agent._id)
                                button.btn.btn-dark.btn-block(type="submit") Delete


